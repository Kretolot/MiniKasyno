<Window x:Class="MiniKasyno.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window2" Height="450" Width="800"
        Background="DarkGreen"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <!-- 
        Klasa Window2 - drugie okno aplikacji MiniKasyno.
        Zawiera interfejs dla wyboru gry: Ruletka lub Black Jack.
    -->

    <Grid>
        <!-- Wyświetlanie zegara w prawym górnym rogu -->
        <TextBlock Name="txtClock" FontSize="12"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5px"/>

        <!-- Przycisk powrotu do poprzedniego okna -->
        <Button Name="btnEnter" FontSize="8" Content="Wróć" 
                Width="30" Height="20"
                Margin="2" Background="White" Foreground="Black" 
                Click="btnBack_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5" 
                            BorderThickness="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Kontener przycisków do wyboru gry -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Przycisk do uruchomienia gry w Ruletkę -->
                <Button Width="250" Height="250" Margin="10" Background="Transparent" Click="btnRoulette_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5" 
                                    BorderThickness="2"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="Images/ruletka.png" Stretch="UniformToFill"/>
                </Button>
                <Label Content="Ruletka" Foreground="White" FontSize="18px" Width="68" />
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Przycisk do uruchomienia gry w Black Jacka -->
                <Button Width="200" Height="250" Margin="10" Background="Transparent" Click="btnBlackJack_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5" 
                                    BorderThickness="2"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="Images/bj.png" Stretch="UniformToFill"/>
                </Button>
                <Label Content="Black Jack" Foreground="White" FontSize="18px" Width="90" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
