<Window x:Class="MiniKasyno.BlackJack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniKasyno"
        mc:Ignorable="d"
        Title="BlackJack" Height="450" Width="800"
        Background="DarkGreen"
        Foreground="White"
        WindowStartupLocation="CenterScreen">
    <!-- Główna siatka (Grid) dla układu okna -->
    <Grid>
        <!-- Zegar wyświetlający aktualny czas -->
        <TextBlock Name="txtClock" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5"/>

        <!-- Przycisk "Wróć" do powrotu do głównego menu lub poprzedniego ekranu -->
        <Button Name="btnEnter" FontSize="8" Content="Wróć" 
                Width="30" Height="20"
                Margin="0,3,0,0" Background="White" Foreground="Black" 
                Click="btnBack_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top">
            <!-- Stylizowanie przycisku -->
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5" 
                            BorderThickness="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Panel z informacjami o stanie gry -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Text wyświetlający karty gracza -->
            <TextBlock x:Name="PlayerScoreText" FontSize="16" Text="Twoje karty: " />
            <!-- Panel z kartami gracza -->
            <StackPanel Orientation="Horizontal" x:Name="PlayerCardsPanel" />

            <!-- Text wyświetlający karty krupiera -->
            <TextBlock x:Name="DealerScoreText" FontSize="16" Text="Karty krupiera: " />
            <!-- Panel z kartami krupiera -->
            <StackPanel Orientation="Horizontal" x:Name="DealerCardsPanel" />

            <!-- Przycisk do rozpoczęcia nowej gry -->
            <Button Content="Nowa Gra" Click="NewGame_Click" />
            <!-- Przycisk do dobierania kart -->
            <Button x:Name="btnDobierz" Content="Dobierz Kartę" Click="Hit_Click" Visibility="Collapsed"/>
            <!-- Przycisk do spasowania -->
            <Button x:Name="btnPass" Content="Spasuj" Click="Stand_Click" Visibility="Collapsed"/>
            <!-- Tekst z wynikiem gry -->
            <TextBlock x:Name="ResultText" FontSize="20" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
