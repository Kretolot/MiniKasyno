<Window x:Class="MiniKasyno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniKasyno"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="DarkGreen"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Wyświetlanie aktualnego czasu -->
        <TextBlock Name="txtClock" FontSize="12"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5px"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Nagłówek aplikacji -->
            <TextBlock x:Name="txtName" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Mini Kasyno"/>

            <!-- Przycisk wejścia do kasyna -->
            <Button Name="btnEnter" FontSize="30" Content="Wejdź" Margin="20" Padding="10,5" Background="White" Foreground="Black" Click="btnEnter_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="White" CornerRadius="20" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
