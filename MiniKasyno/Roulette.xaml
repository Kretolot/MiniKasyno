<Window x:Class="MiniKasyno.Roulette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roulette" Height="450" Width="800"
        Background="DarkGreen" 
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <!-- Główna siatka układu interfejsu użytkownika -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Obraz ruletki -->
        <Image x:Name="imgRoulette" Source="/images/ruletka.png" Width="280" Height="280"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           Grid.Column="0"/>

        <!-- Element multimedialny do wyświetlania wideo ruletki -->
        <MediaElement x:Name="mediaElement" Width="280" Height="280"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  LoadedBehavior="Manual" UnloadedBehavior="Stop"
                  MediaEnded="MediaElement_MediaEnded"
                  Visibility="Collapsed"
                  Grid.Column="0"
                  Panel.ZIndex="1"/>

        <!-- Obramowanie dla ruletki -->
        <Image x:Name="imgObram" Source="/images/obramm.png" Width="282" Height="282"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           Grid.Column="0"
           Panel.ZIndex="2"/>

