        <!-- Zegar w prawym górnym rogu -->
        <TextBlock Name="txtClock" FontSize="12" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Margin="5" Grid.ColumnSpan="2"/>

        <!-- Przycisk powrotu do menu głównego -->
        <Button Name="btnEnter" FontSize="8" Content="Wróć" 
                Width="30" Height="20"
                Margin="0,3,0,0" Background="White" Foreground="Black" 
                Click="btnBack_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5" 
                            BorderThickness="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Przycisk zakładu na czerwone -->
        <Button Name="btnRed" Content="RED" FontSize="16" Width="100" Height="40" 
                Background="Red" Foreground="White" VerticalAlignment="Bottom"
                Margin="200,0,0,30" Click="Color_Click" Panel.ZIndex="2"/>

        <!-- Przycisk zakładu na czarne -->
        <Button Name="btnBlack" Content="BLACK" FontSize="16" Width="100" Height="40" 
                Background="Black" Foreground="White" VerticalAlignment="Bottom"
                Margin="400,0,0,30" Click="Color_Click"/>
    </Grid>

</Window>